	PRINTFORML 還給失主之後、得到了一些報酬……
	CALL PRINT_ADD_EXP(対象, "知略経験値", 5 + RAND:5)
	CALL ICPRINT("得到了<3000>金", "L", カラー_注意)
	MONEY += 3000
	RETURN 1
ENDIF

